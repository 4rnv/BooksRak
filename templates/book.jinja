{% include 'top.html' %}
<title>Submit review for {{book.book_name}}</title>
  </head>
  <body>
    {% include 'nav.html' %}
    <div class="container">
      <h2>{{book.book_name}}</h2>
      <span><img src="{{book.img_url}}" width=70 height=100></span>
      <span>Author: {{book.author_name}}</span>
      <p>{{book.blurb}}</p>
      <a href= "https://amazon.in/s?k={{book.book_name}}" class="a_special" target="_blank">Buy on Amazon</a>
        <a href= "https://libgen.rs/fiction/?q={{book.book_name}}" class="a_special" target="_blank">Read on Libgen</a>
      <form id="review_form" action="/book/{{book['book_id']}}/review" method="post">
      <p>Post your review</p>
      <input type="text" name="title" class="form_ele" id="review_title" required placeholder="title"><br>
      <textarea name="review_content" class="form_ele" id="review_text" required placeholder="Write something..."></textarea><br>
        <div class="rate">
          <input required type="radio" id="star5" name="rating" value="5"/>
          <label for="star5" title="5⭐"></label>
          <input required type="radio" id="star4" name="rating" value="4" />
          <label for="star4" title="4⭐"></label>
          <input required type="radio" id="star3" name="rating" value="3" />
          <label for="star3" title="3⭐"></label>
          <input required type="radio" id="star2" name="rating" value="2" />
          <label for="star2" title="2⭐"></label>
          <input required type="radio" id="star1" name="rating" value="1" />
          <label for="star1" title="1⭐"></label>
        </div>
      <div style="margin-bottom: 1rem;"><p>Captcha:</p>
        {{ captcha_html(captcha)|safe }}
      </div>
      <input class="post_review" type="submit" value="Post Review">
      </form>
    </div>
    {% include 'footer.html' %}
  </body>
</html>