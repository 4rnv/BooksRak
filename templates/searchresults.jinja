{% include 'top.jinja' %}
  <title>BooksRak</title>
</head>
<body>
  {% include 'nav.jinja' %}
    <form id="searchForm" class="search_field" action="{{ url_for('search_books') }}" method="get">
        <input type="text" id="searchQuery" name="query" required placeholder="Search for books...">
        <!-- <input class="btn" type="submit" value="Submit"/> -->
        <div id="searchWarning" class="search-warning"></div>
    </form>
  <div class="container left">
    {% block content %}
        <h1>Search Results</h1>
        {% if books %}
            {% for book in books %}
                <div class="flex">
                    <strong class="name ele external_links"><a href="/book/{{book['book_id']}}">{{ book.book_name }}</a></strong>
                    <span><i>{{ book.author_name }}</i></span>
                    <span>{{ book.avg_rating }}</span>
                    <img src="{{ book.img_url }}" alt="Cover image" width="70" height="100">
                </div>
            {% endfor %}
        {% else %}
            <p>No books found.</p>
        {% endif %}
    {% endblock %}
  </div>
  {% include 'footer.jinja' %}
</body>
</html>